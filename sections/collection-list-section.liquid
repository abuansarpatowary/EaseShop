<div class="container">
  <ul class="categories-list">
    {% for i in (1..section.settings.collections_to_show) %}
      {% assign collection_key = 'collection_' | append: i %}
      {% assign collection = section.settings[collection_key] %}
      {% if collection %}
        <a href="{{ collection.url }}" class="categories-item text-center">
          <li>
            <img src="{{ collection.image | img_url: '100x100' }}" alt="{{ collection.title }}">
            <span class="d-block pt-15">{{ collection.title }}</span>
          </li>
        </a>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% schema %}
