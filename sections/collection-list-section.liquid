  "name": "Collection List Section",
  "tag": "div",
  "class": "categories-section",
  "settings": [
    {
      "type": "range",
      "id": "collections_to_show",
      "label": "Number of Collections to Display",
      "min": 1,
      "max": 9,
      "default": 8
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "Select Collection 1"
