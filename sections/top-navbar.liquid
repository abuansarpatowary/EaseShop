<div class="top-header">
  <div class="container">
    <div class="header-line">
      <div class="row d-flex align-items-center pt-10 ">
        <div class="col-xl-1 col-lg-1 col-md-2 col-sm-2 col-3">
          <div class="logo">
            <a href="index.html">
              <img
                src=" {% if shop.logo == blank %} {{ section.settings.logo |  img_url: 'medium' }} {% else %} {{ shop.logo }} {% endif %}"
                alt="{{ shop.name }}"
              >
            </a>
          </div>
        </div>
        <div class="col-xl-6 col-lg-5 col-md-4 col-sm-10 col-9">
          <div class="search-box">
            <div class="search-bar">
              <form action="{{ routes.search_url }}" method="get">
                <input type="text" id="search" name="q" class="search" placeholder="Search your products">
                <button type="submit" class="search-button">
                  <i class="fas fa-search"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-xl-5 col-lg-6 col-md-6 col-sm-12 col-12">
          <div class="top-header-right">
            <ul>
              <li>
                <div class="btn btn-orange top-header-btn">
                  <span>Become a Seller</span>
                </div>
              </li>
              <li>
                <div class="top-header-login">
                  <a href="#">Log In</a>
                  <a href="#">Sign Up</a>
                </div>
              </li>
              <li>
                <div class="top-header-cart">
                  <a href="#">
                    <i class="fas fa-heart"></i>
                  </a>
                  <a href="#">
                    <i class="fas fa-shopping-cart"></i>
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Top Navbar",
  "settings": [
    {
      "type": "header",
      "content": "Top Navbar"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Top Navbar",
      "category": "Header"
    }
  ]
}
{% endschema %}
